function ms_core_get_module_products_list() {
  $products = module_invoke_all('ms_products');
  $products_list = array();

  foreach ($products as $product) {
    $products_list[$product->module .'-'. $product->id] = $product->module_title .' :: '. $product->name;
  }

  return $products_list;
}

/**
