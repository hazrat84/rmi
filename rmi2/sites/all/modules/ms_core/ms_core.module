 */
function ms_core_add_history_item($order, $uid, $message, $hidden = FALSE) {
  return db_query("INSERT INTO {ms_core_order_history} (oid, uid, message, status, hidden, created) VALUES (%d, %d, '%s', '%s', %d, %d)",
