/**
 * Implements hook_help().
 */
function custom_help($section = 'admin/help#custom', $arg = NULL) {
    $output = '';
    switch ($section) {
        case 'admin/content/custom':
            $output = '<p>' . t('This page lists all of the content on the site that may have a webform attached to it.') . '</p>';
            break;
    }

    return $output;
}

